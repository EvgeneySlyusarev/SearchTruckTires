<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SearchTruckTires.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Программа поиска грузовых шин и дисков" HorizontalTextAlignment="Center" TextColor="White" FontSize="30"/>
        </Frame>
      
        
        <Label Text="Счетчик нажатий кнопки" />
      
        <Button Text="Press Me + " Clicked="Button_Clicked" />
        <Button Text="Press Me - " Clicked="Button_Clicked_1"/>
    </StackLayout>

</ContentPage>
