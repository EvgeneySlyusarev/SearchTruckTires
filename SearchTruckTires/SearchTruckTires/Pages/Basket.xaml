<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:searchtrucktires="clr-namespace:SearchTruckTires" 
             x:DataType="searchtrucktires:ProduktBasket"
             x:Class="SearchTruckTires.Basket"
             Title="КОРЗИНА">
    <ContentPage.Content>
        <StackLayout>
                <StackLayout Orientation="Vertical">
                    <Label Text="{Binding Source={x:Reference _stepper}, Path=Value, StringFormat='Колличество товаров в корзине: {0:F0}'}"/>
                    <Label Text="{Binding Source={x:Reference _stepper}, Path=Value, StringFormat='Сумма товаров: {0:F0}'}"/>
                </StackLayout>
            <ListView x:Name="ListViewBasket" ItemTapped="OnItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" BackgroundColor="AliceBlue" Opacity="0.9">
                                <Image Source="{Binding ImageProduktBasket}" WidthRequest="100" HeightRequest="120"></Image>
                                <StackLayout>
                                    <Label Text="{Binding TitleProduktBasket}" FontSize="18" FontAttributes="Bold" />
                                    <Label Text="{Binding PriseNProduktBasket}" FontSize="Body" FontAttributes="Bold"/>
                                    <Label Text="{Binding PriseBNProduktBasket}" FontSize="Body" FontAttributes= "Bold"/>
                                    <StackLayout Orientation="Horizontal">
                                        <Stepper x:Name="_stepper" Minimum="0" Maximum="10" Increment="1"/>
                                        <Label Text="{Binding Source={x:Reference _stepper}, Path=Value}"/>
                                    </StackLayout>        
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Button Text="ОТПРАВИТЬ" 
                                        HorizontalOptions="Start"/>
                                    <Button Text="Удалить" 
                                        HorizontalOptions="End"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
